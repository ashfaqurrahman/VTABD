<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.AuthorProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rootLayout">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="10sp"
            android:text="Author"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/main"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_bg_white"
            android:src="@drawable/empty_profile"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main"
        android:layout_marginStart="15dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            tools:text="Badol Mondal"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="visible"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/author_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="7sp"
            android:text="@string/phone"
            android:textColor="#0f122f"
            android:textSize="14sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_call" />

        <TextView
            android:id="@+id/author_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="7sp"
            android:text="@string/email"
            android:textColor="#0f122f"
            android:textSize="14sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_email_gray" />

        <TextView
            android:id="@+id/author_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="7sp"
            tools:text="Address"
            android:textColor="#0f122f"
            android:textSize="14sp"
            android:textStyle="normal"
            app:drawableStartCompat="@drawable/ic_location_icon_solid" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="7sp"
            android:text="Logout"
            android:textColor="#0f122f"
            android:textSize="14sp"
            android:textStyle="normal"
            app:drawableStartCompat="@drawable/ic_log_out" />

    </LinearLayout>

</RelativeLayout>